<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.advanced.petclothesshop.ui.home.HomeViewModel" />
        <variable
            name="homeFragment"
            type="com.advanced.petclothesshop.ui.home.HomeFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="26dp"
        tools:context=".ui.home.HomeFragment">

        <ImageView
            android:id="@+id/image_pet_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pet_hand"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="#F1FAFB" />

        <TextView
            android:id="@+id/text_welcome_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Hello, sweetie"
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:ignore="HardcodedText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/ic_buy"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_buy"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/ic_category"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_category"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ic_buy"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_banner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@id/text_welcome_user">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/image_dog"
            android:onClick="@{() -> homeFragment.showClothesDetails()}"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>