<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.advanced.petclothesshop.ui.home.HomeViewModel" />
        <variable
            name="homeFragment"
            type="com.advanced.petclothesshop.ui.home.HomeFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="26dp"
        tools:context=".ui.home.HomeFragment">

        <ImageView
            android:id="@+id/image_pet_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pet_hand"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="#F1FAFB" />

        <TextView
            android:id="@+id/text_welcome_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Hello, sweetie"
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:ignore="HardcodedText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/ic_buy"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_buy"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/ic_category"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_category"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ic_buy"/>

        <!-- Search Bar -->
        <LinearLayout
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button_outline_blue"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/ic_category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Search Icon -->
            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_left"
                android:contentDescription="Search" />

            <!-- Search Text -->
            <EditText
                android:id="@+id/search_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search"
                android:paddingStart="10dp"
                android:background="@null"
                android:textSize="14sp"
                android:fontFamily="@font/poppins" />

            <!-- Filter Icon -->
            <ImageView
                android:id="@+id/filter_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_category"
                android:contentDescription="Filter" />
        </LinearLayout>

        <!-- Banner Image -->
        <ImageView
            android:id="@+id/banner_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/image_dog"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/search_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop" />

        <!-- Tab Filters -->
        <LinearLayout
            android:id="@+id/tab_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/banner_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tab_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:textSize="14sp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tab_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popular"
                android:textSize="14sp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/tab_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent"
                android:textSize="14sp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/tab_recommended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommended"
                android:textSize="14sp"
                android:textColor="@color/secondary_text" />
        </LinearLayout>

        <!-- Product Grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_product"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/tab_filter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_product" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
